{% extends 'base.html.twig' %}

{% block title %}Oprema index{% endblock %}

{% block body %}
    <h1>Oprema index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cijena</th>
                <th>Vrsta</th>
                <th>Velicina</th>
                <th>Boja</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oprema in opremas %}
            <tr>
                <td>{{ oprema.id }}</td>
                <td>{{ oprema.cijena }}</td>
                <td>{{ oprema.vrsta }}</td>
                <td>{{ oprema.velicina }}</td>
                <td>{{ oprema.boja }}</td>
                <td>
                    <a href="{{ path('app_oprema_show', {'id': oprema.id}) }}">show</a>
                    <a href="{{ path('app_oprema_edit', {'id': oprema.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_oprema_new') }}">Create new</a>
{% endblock %}
